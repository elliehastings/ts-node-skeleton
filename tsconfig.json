{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "node", // this is required for ts imports
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "include": [
    "src",
    "testHelpers/setupTest.ts"
  ],
  "paths": {
    "src/*": [
      "src/*"
    ]
  }
}
